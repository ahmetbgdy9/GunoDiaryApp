<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sifremiUnuttumConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SifremiUnuttum">

    <TextView
        android:id="@+id/sifremiUnuttumGuno"
        android:layout_width="357dp"
        android:layout_height="149dp"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/yazi6"
        android:gravity="center"
        android:text="GÜNO"

        android:textColor="@color/white"
        android:textSize="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifremiunuttumEposta"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/giriskullaniciadisifretext"
        android:drawableLeft="@drawable/kayitolmaillogo"
        android:ems="10"
        android:hint="E-Posta"
        android:inputType="textPersonName"
        android:padding="13dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifremiUnuttumGuno" />

    <Button
        android:id="@+id/btnkayitolKaydet"
        android:layout_width="135dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/girisbutonarkaplan"
        android:text="Gönder"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifremiunuttumEposta" />
</androidx.constraintlayout.widget.ConstraintLayout>